<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="colaborador"
            type="uv.tc.packetworldmovil.pojo.Colaborador"
            />
    </data>

    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal"
        tools:context=".EditarPerfil">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perfil"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <ImageView
                    android:id="@+id/img_perfil"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/outline_account_circle_24"
                    android:layout_gravity="center"
                    app:imageUrl='@{colaborador != null ? colaborador.fotografiaBase64 : ""}' />
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:indeterminate="true"/>

                <Button
                    android:id="@+id/btn_subir_foto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subir Foto"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:textColor="#5d57ff" />
            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:hint="Nombre"
                android:textColorHint="#546E7A"
                app:boxStrokeColor="#5d57ff"
                app:hintTextColor="@android:color/darker_gray"
                app:boxBackgroundColor="#FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/et_nombre"
                    android:text='@{colaborador != null ? colaborador.nombre : ""}'
                    android:inputType="textPersonName"
                    android:textColor="#333333" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:hint="Apellido Paterno"
                android:textColorHint="#546E7A"
                app:boxStrokeColor="#5d57ff"
                app:hintTextColor="@android:color/darker_gray"
                app:boxBackgroundColor="#FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/et_apellidoP"
                    android:text='@{colaborador != null ? colaborador.apellidoPaterno : ""}'
                    android:inputType="textPersonName"
                    android:textColor="#333333" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:hint="Apellido Materno"
                android:textColorHint="#546E7A"
                app:boxStrokeColor="#5d57ff"
                app:hintTextColor="@android:color/darker_gray"
                app:boxBackgroundColor="#FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/et_apellidoM"
                    android:text='@{colaborador != null ? colaborador.apellidoMaterno : ""}'
                    android:inputType="textPersonName"
                    android:textColor="#333333" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:hint="CURP"
                app:boxStrokeColor="#5d57ff"
                app:hintTextColor="@android:color/darker_gray"
                app:boxBackgroundColor="#FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/et_curp"
                    android:text='@{colaborador != null ? colaborador.curp : ""}'
                    android:textColorHint="#546E7A"
                    android:textColor="#333333" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:hint="Correo"
                app:boxStrokeColor="#5d57ff"
                app:hintTextColor="@android:color/darker_gray"
                app:boxBackgroundColor="#FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/et_email"
                    android:text='@{colaborador != null ? colaborador.correo : ""}'
                    android:inputType="textWebEmailAddress"
                    android:textColor="#333333" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:hint="Contraseña"
                app:boxStrokeColor="#5d57ff"
                app:hintTextColor="@android:color/darker_gray"
                app:boxBackgroundColor="#FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/et_contrasena"
                    android:text='@{colaborador != null ? colaborador.contrasena : ""}'
                    android:inputType="textVisiblePassword"
                    android:textColor="#333333" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutNumeroPersonal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:hint="Número Personal"
                app:boxStrokeColor="#5d57ff"
                app:hintTextColor="@android:color/darker_gray"
                app:boxBackgroundColor="#FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/et_numero_personal"
                    android:text='@{colaborador != null ? colaborador.numeroPersonal : ""}'
                    android:inputType="number"
                    android:textColor="#333333" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:hint="Número De licencia"
                app:boxStrokeColor="#5d57ff"
                app:hintTextColor="@android:color/darker_gray"
                app:boxBackgroundColor="#FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/et_numero_licencia"
                    android:text='@{colaborador != null ? colaborador.numeroLicencia : ""}'
                    android:textColor="#333333" />
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/sp_rol"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner_background"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />

            <Button
                android:id="@+id/btn_editar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/material_dynamic_neutral50"
                android:text="Editar"
                android:textColor="#000"
                android:textSize="16sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

    </ScrollView>
</layout>