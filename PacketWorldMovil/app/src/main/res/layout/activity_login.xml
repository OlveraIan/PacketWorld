<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="PACKET WORLD::LOGIN"
        android:textSize="20sp"
        android:shadowColor="@color/DarkDefault"
        android:shadowDx="-4"
        android:shadowDy="3"
        android:shadowRadius="3.0"

        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:padding="29dp"
        android:layout_marginTop="20dp"
        android:background="@color/LightFg"
        android:src="@drawable/packetworld_hd"
        android:elevation="2dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="30dp"
        android:text="NUMERO DE PERSONAL"
        android:textSize="17sp"
        android:textStyle="bold"
        android:shadowColor="@color/DarkDefault"
        android:shadowDx="-3"
        android:shadowDy="2"
        android:shadowRadius="3.0"
        />

    <EditText
        android:id="@+id/et_NumeroPersonal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/estilo_edit_text"
        android:hint="S21018123"
        android:maxLength="20"
        android:elevation="2dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="30dp"
        android:text="CONTRASEÃ‘A"
        android:textSize="17sp"
        android:textStyle="bold"
        android:shadowColor="@color/DarkDefault"
        android:shadowDx="-3"
        android:shadowDy="2"
        android:shadowRadius="3.0"

        />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/estilo_edit_text"
        android:hint="*************"
        android:inputType="textPassword"
        android:maxLength="25"
        android:elevation="2dp"
        />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="29dp"
        android:text="INICIAR SESION"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/DarkDefault"
        android:visibility="invisible"
        />

</LinearLayout>